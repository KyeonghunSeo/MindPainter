                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/black_circle_fill"
                android:scaleType="centerInside"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/black_circle_fill"
                android:scaleType="centerInside"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/black_circle_fill"
                android:scaleType="centerInside"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/black_circle_fill"
