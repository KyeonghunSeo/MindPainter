                android:layout_gravity="center"
                android:src="@drawable/highlight"
                android:scaleType="centerInside"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineLy"
        android:layout_width="match_parent"
        android:layout_height="70dp"
